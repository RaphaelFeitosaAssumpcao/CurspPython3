# Aprendendo novas funcionalidades de listas part 2
pessoas = list()
dado = list()
for c in range(0, 3):
    dado.append(str(input('Nome: ')))
    dado.append(int(input('Idade: ')))
    pessoas.append(dado[:])
    dado.clear()

for p in pessoas:
    if p[1] >=18:
        print(f'{p[0]} é maior de idade!')
    else:
        print(f'{p[0]} é menor de idade e possui {p[1]} anos')
